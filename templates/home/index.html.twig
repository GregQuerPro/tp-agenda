{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <h1>Contacts</h1>
    <table class="table mt-4">
        <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
            <th scope="col">Téléphone</th>
            <th scope="col">Catégorie</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <th scope="row">{{ contact.id }}</th>
                <td>{{ contact.prenom }}</td>
                <td>{{ contact.nom }}</td>
                <td>{{ contact.telephone }}</td>
                <td>{{ contact.category.name }}</td>
                <td>
                    <a href="{{ path('contact', {id: contact.id}) }}" type="button" class="btn btn-info">Afficher</a>
                    {% if app.user %}
                        <a href="{{ path('contact-edit', {id: contact.id}) }}" type="button" class="btn btn-warning">Modifier</a>
                        <a href="{{ path('contact-delete', {id: contact.id}) }}" type="button" class="btn btn-danger">Supprimer</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
